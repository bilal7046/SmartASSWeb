@model SmartASSWeb.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Heads
{

}
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">My Profile</h3>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">Home</a>
            </li>
            <li class="breadcrumb-item active">My Profile</li>
        </ol>
        <div class="text-muted">Create a new profile or manage your existing one.</div>
    </div>
    <div class="col-md-7 col-12 align-self-center d-none d-md-block">

    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <div class="row">
        <!-- Column -->
        <div class="col-lg-4 col-xl-3 col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="mt-4">
                        <div class="profile-img text-center justify-content-md-center d-flex">
                            <img alt="Profile Image" src="@Model.Profile.PhotoUrl" class="rounded-circle" width="150" style="max-height: 150px; max-width: 150px; height: 150px; width: 150px;"/>
                        </div><br/>
                        <h4 class="card-title mt-2 text-center justify-content-md-center d-flex">@Model.Profile.FirstName @Model.Profile.LastName</h4>
                        <div class="row text-center justify-content-md-center d-flex">
                            <div class="col-2"></div>
                            <div class="col-8 text-center justify-content-md-center">
                                <button class="btn btn-success" onclick="location.href = '@Url.Action("Manage", "UserProfile")'">&nbsp;&nbsp;&nbsp;&nbsp;Manage Profile&nbsp;&nbsp;&nbsp;&nbsp;</button>
                            </div>
                            <div class="col-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
        <!-- Column -->
        <div class="col-lg-8 col-xl-9 col-md-7">
            <div class="card">
                <!-- Tabs -->
                <ul class="nav nav-pills custom-pills" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-timeline-tab" data-toggle="pill" href="#" role="tab" aria-controls="pills-timeline" aria-selected="true">Profile</a>
                    </li>
                </ul>
                <!-- Tabs -->
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="current-month" role="tabpanel" aria-labelledby="pills-timeline-tab">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 col-xs-4 b-r">
                                    <strong>Email</strong>
                                    <br>
                                    <p class="text-muted">
                                        <a href="#">@Model.Profile.Email</a>
                                    </p>
                                </div>
                                <div class="col-md-4 col-xs-4 b-r">
                                    <strong>Package</strong>
                                    <br>
                                    @if (Model.Profile.Package == "Individual")
                                    {
                                        <span class="badge badge-light">Individual</span>
                                    }
                                    else if (Model.Profile.Package == "SmallBusiness")
                                    {
                                        <span class="badge badge-warning">Small Business</span>
                                    }
                                    else if (Model.Profile.Package == "Business")
                                    {
                                        <span class="badge badge-info">Business</span>
                                    }
                                    else if (Model.Profile.Package == "Enterprise")
                                    {
                                        <span class="badge badge-secondary">Enterprise</span>
                                    }
                                    else if (Model.Profile.Package == "AllAccess")
                                    {
                                        <span class="badge badge-dark">All Access</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <hr/><br/>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-xs-4 b-r">
                                    <strong>First Name</strong>
                                    <br>
                                    <p class="text-muted">@Model.Profile.FirstName</p>
                                </div>
                                <div class="col-md-4 col-xs-4 b-r">
                                    <strong>Last Name</strong>
                                    <br>
                                    <p class="text-muted">@Model.Profile.LastName</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-xs-4 b-r">
                                    <strong>Gender</strong>
                                    <br>
                                    <p class="text-muted">@Model.Profile.Gender</p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <strong>Date of Birth</strong>
                                    <br>
                                    <p class="text-muted">@Model.Profile.DateOfBirth.GetValueOrDefault().ToDateTime().ToString("dd/MMM/yyyy")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
        <!-- Row -->
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>
<!-- Row -->
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->
