@model SmartASSWeb.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Heads
{
    
}
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">My Profile</h3>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active">My Profile</li>
        </ol>
    </div>
    <div class="col-md-7 col-12 align-self-center d-none d-md-block">

    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body">
                        <center class="mt-4">
                            <div class="profile-img">
                                <img src="@Model.Profile.PhotoUrl" class="rounded-circle" width="150" style="max-height: 150px; max-width: 150px; height: 150px; width: 150px;" />
                            </div>
                            <h4 class="card-title mt-2">@Model.Profile.FirstName @Model.Profile.LastName</h4>
                            <h6 class="card-subtitle">@Model.Profile.Designation</h6>
                            <div class="row text-center justify-content-md-center">
                                @*<div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-people"></i> <font class="font-medium">@Model.TotalContacts</font></a></div>
                                <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-picture"></i> <font class="font-medium">@Model.RequestCount</font></a></div>*@
                                @if (!string.IsNullOrEmpty(@Model.Profile.SocialLinkedUrl))
                                {
                                    <a class="btn btn-circle btn-secondary" style="margin-right: 5px;background-color:#0e76a8" href="@Model.Profile.SocialLinkedUrl" data-toggle="tooltip" title="LinkedIn"><i class="fab ti-linkedin"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(@Model.Profile.SocialTwitterUrl))
                                {
                                    <a class="btn btn-circle btn-secondary" style="margin-right: 5px;background-color:#00acee" href="@Model.Profile.SocialTwitterUrl" data-toggle="tooltip" title="Twitter"><i class="fab ti-twitter-alt"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(@Model.Profile.SocialFacebookUrl))
                                {
                                    <a class="btn btn-circle btn-secondary" style="margin-right: 5px;background-color:#3b5998" href="@Model.Profile.SocialFacebookUrl" data-toggle="tooltip" title="Facebook"><i class="fab ti-facebook"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(@Model.Profile.SocialInstagramUrl))
                                {
                                    <a class="btn btn-circle btn-secondary" style="background-color:#3f729b" href="@Model.Profile.SocialInstagramUrl" data-toggle="tooltip" title="Instagram"><i class="fab ti-instagram"></i></a>
                                }
                            </div>
                        </center>
                    </div>
                    <div>
                        <hr>
                    </div>
                    <div class="card-body">
                        <center class="mt-4">
                            <button class="btn btn-success" onclick="location.href='@Url.Action("Manage", "UserProfile")'">&nbsp;&nbsp;&nbsp;&nbsp;Manage Profile&nbsp;&nbsp;&nbsp;&nbsp;</button>
                        </center>
                        <center class="mt-4">
                            <button class="btn btn-info" onclick="window.open('@Url.Action("Card", "UserProfile")?id=@Model.Profile.UserId')">View Business Card</button>
                        </center>
                        <center class="mt-4">
                            <button class="btn btn-danger" onclick="window.open('@Url.Action("UserRequests", "ProfileStats")?id=@Model.Profile.UserId')">&nbsp;&nbsp;&nbsp;Profile Statistics&nbsp;&nbsp;&nbsp;</button>
                        </center>
                    </div>
                    <div>
                        <hr>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">Email address </small>
                        <h6><a href="../../../../../../cdn-cgi/l/email-protection.htm" class="__cf_email__" data-cfemail="8ce4ede2e2edebe3fae9feccebe1ede5e0a2efe3e1">@Model.Profile.Email</a></h6>
                        <small class="text-muted pt-4 db">Phone</small>
                        <h6>@Model.Profile.Phone</h6>
                        <small class="text-muted pt-4 db">Mobile</small>
                        <h6>@Model.Profile.Mobile</h6>
                        <small class="text-muted pt-4 db">Address</small>
                        <h6>@Model.Profile.AddressLine1, @Model.Profile.AddressLine2 @Model.Profile.City, @Model.Profile.Province, @Model.Profile.Country, @Model.Profile.PostalCode</h6>
                        <div class="map-box">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d470029.1604841957!2d72.29955005258641!3d23.019996818380896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e848aba5bd449%3A0x4fcedd11614f6516!2sAhmedabad%2C+Gujarat!5e0!3m2!1sen!2sin!4v1493204785508" width="100%" height="150" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div> <small class="text-muted pt-4 db">Social Profile</small>
                        <br />
                        @if (string.IsNullOrEmpty(Model.Profile.SocialLinkedUrl))
                        {
                            <a class="btn btn-circle btn-secondary" href="@Model.Profile.SocialLinkedUrl"><i class="fab ti-linkedin"></i></a>
                        }
                        @if (string.IsNullOrEmpty(Model.Profile.SocialFacebookUrl))
                        {
                            <a class="btn btn-circle btn-secondary" href="@Model.Profile.SocialFacebookUrl"><i class="fab ti-facebook"></i></a>
                        }
                        @if (string.IsNullOrEmpty(Model.Profile.SocialTwitterUrl))
                        {
                            <a class="btn btn-circle btn-secondary" href="@Model.Profile.SocialTwitterUrl"><i class="fab ti-twitter-alt"></i></a>
                        }
                        @if (string.IsNullOrEmpty(Model.Profile.SocialInstagramUrl))
                        {
                            <a class="btn btn-circle btn-secondary" href="@Model.Profile.SocialInstagramUrl"><i class="fab ti-instagram"></i></a>
                        }
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <!-- Tabs -->
                    <ul class="nav nav-pills custom-pills" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-timeline-tab" data-toggle="pill" href="pages-profile.html#current-month" role="tab" aria-controls="pills-timeline" aria-selected="true">Profile</a>
                        </li>
                    </ul>
                    <!-- Tabs -->
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="current-month" role="tabpanel" aria-labelledby="pills-timeline-tab">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 col-xs-4 b-r">
                                        <strong>First Name</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.FirstName</p>
                                    </div>
                                    <div class="col-md-4 col-xs-4 b-r">
                                        <strong>Last Name</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.LastName</p>
                                    </div>
                                    <div class="col-md-4 col-xs-4 b-r">
                                        <strong>Location</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.City, @Model.Profile.Province</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-xs-4 b-r">
                                        <strong>Email</strong>
                                        <br>
                                        <p class="text-muted"><a href="../../../../../../cdn-cgi/l/email-protection.htm" class="__cf_email__" data-cfemail="ef858087818e9b878e81af8e8b828681c18c8082">@Model.Profile.Email</a></p>
                                    </div>
                                    <div class="col-md-4 col-xs-4">
                                        <strong>Mobile</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.Phone</p>
                                    </div>
                                    <div class="col-md-4 col-xs-4">
                                        <strong>Mobile</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.Mobile</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-xs-4 b-r">
                                        <strong>Gender</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.Gender</p>
                                    </div>
                                    <div class="col-md-4 col-xs-4">
                                        <strong>Date of Birth</strong>
                                        <br>
                                        <p class="text-muted">@Model.Profile.DateOfBirth.GetValueOrDefault().ToDateTime().ToString("dd/MMM/yyyy")</p>
                                    </div>
                                    <div class="col-md-4 col-xs-4">
                                        <strong>Website</strong>
                                        <br>
                                        <p class="text-muted"><a href="@Model.Profile.Website">@Model.Profile.Website</a></p>
                                    </div>
                                </div>
                                <hr>
                                <h5>Profile Summary</h5>
                                <p>
                                    @Model.Profile.ProfileSummary
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
        <!-- Row -->
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
<!-- Row -->
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->
</div>
