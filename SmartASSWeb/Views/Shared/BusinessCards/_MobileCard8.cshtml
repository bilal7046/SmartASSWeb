@model SmartASSWeb.Bll.BusinessCard
<div class="row text-center">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
                <div class="row" style="background-image: url('../../../assets/images/law-firm.jpg'); background-size: cover; background-color: whitesmoke">
                    <div class="col-md-12">
                        <img src="@Model.ProfileImage" class="rounded-circle center" width="200" style="margin-top: 20px; margin-bottom: 20px; max-height: 200px; max-width: 200px; height: 200px; width: 200px;" />
                    </div>
                </div>
                <div class="row" style="background-color:#D1272C">
                    <div class="col-md-12 text-center" style="color:white; padding-top: 20px;padding-bottom:30px;">
                        <h1>@Model.ProfileFullName</h1>
                        <h3>@Model.Title</h3>
                        <h5>@Model.Name</h5>
                        <div style="margin-top:30px;">
                            <a href="tel:@Model.Phone1" target="_blank"><i class="fas fa-phone-square-alt fa-3x"></i></a>
                            <a href="https://api.whatsapp.com/send?phone=@Model.Mobile" target="_blank"><i class="fab fa-whatsapp-square fa-3x"></i></a>
                            <a href="mailto:@Model.Email" target="_blank"><i class="fas fa-envelope-square fa-3x"></i></a>
                            <a href="@Model.Website" target="_blank"><i class="fas fa-globe fa-3x"></i></a>
                        </div>
                        <div style="margin-top:30px;">
                            <p>
                                @Model.ProfileFullAddress
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row" style="background-color:whitesmoke">
                    <div class="col-md-12" style="margin-top:30px;">
                        <a target="_blank" href="@Model.SocialTwitterUrl" rel="noopener noreferrer" data-tooltip="toggle" title="Twitter"><i class="fab fa-twitter-square fa-2x"></i></a>
                        <a target="_blank" href="@Model.SocialFacebookUrl" rel="noopener noreferrer" data-tooltip="toggle" title="Facebook"><i class="fab fa-facebook-square fa-2x"></i></a>
                        <a target="_blank" href="@Model.SocialLinkedUrl" rel="noopener noreferrer" data-tooltip="toggle" title="LinkedIn"><i class="fab fa-linkedin fa-2x"></i></a>
                        <a target="_blank" href="@Model.SocialInstagramUrl" rel="noopener noreferrer" data-tooltip="toggle" title="Instagram"><i class="fab fa-instagram fa-2x"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>