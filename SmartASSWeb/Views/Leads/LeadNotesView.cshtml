@model IEnumerable<SmartASSWeb.Bll.LeadNote>
<div id="note-full-container" class="note-has-grid row">
    @foreach (var item in Model)
    {
        <div class="col-md-10 single-note-item all-category note-important" style="margin-left: 20px;margin-bottom: 0px !important;">
            <div class="card card-body ">
                <span class="side-stick"></span>
                <h5 class="note-title text-truncate w-75 mb-0" data-noteHeading="@item.Subject">@item.Subject <i class="point fas fa-circle ml-1 font-10"></i></h5>
                <p class="note-date font-12 text-muted">@item.DateCreated.ToDateTime().ToString("dd/MM/yyyy - HH:mm")</p>
                <div class="note-content">
                    <p class="note-inner-content text-muted" data-noteContent="@item.Text">@item.Text</p>
                </div>
                <div class="d-flex align-items-center">
                    <a href="DeleteNote('@item.LeadId')"><span class="mr-1"><i class="far ti-trash remove-note"></i></span></a>
                </div>
            </div>
            <hr/>
        </div>
    }
</div>