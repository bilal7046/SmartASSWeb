@model IEnumerable<SmartASSWeb.Bll.Lead>
@{
    ViewBag.Title = "My Leads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Heads
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/b-1.6.3/b-colvis-1.6.3/b-flash-1.6.3/b-html5-1.6.3/b-print-1.6.3/cr-1.5.2/r-2.2.5/sc-2.0.2/sp-1.1.1/sl-1.3.1/datatables.min.css" />
}
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-12 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">My Leads</h3>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active">My Leads</li>
        </ol>
        <div class="text-muted">Shows the details of each lead such as their personal details and their status. You can also add in a new lead manually.</div>
    </div>
    <div class="col-md-7 col-12 align-self-center d-none d-md-block">

    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Company</th>
                                    <th>Phone</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Lead Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lead in Model)
                                {
                                    <tr>
                                        <td>@lead.FirstName</td>
                                        <td>@lead.LastName</td>
                                        <td>@lead.Company</td>
                                        <td>@lead.Phone</td>
                                        <td>@lead.Mobile</td>
                                        <td>@lead.Email</td>
                                        <td>@lead.LeadStatus</td>
                                        <td>
                                            <div class="row">
                                                <div class="col-md-3"><a class="btn btn-success ti-eye" href="/Leads/ViewLead?leadId=@lead.LeadId" data-toggle="tooltip" title="View"></a></div>&nbsp;&nbsp;&nbsp;&nbsp;
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/b-1.6.3/b-colvis-1.6.3/b-flash-1.6.3/b-html5-1.6.3/b-print-1.6.3/cr-1.5.2/r-2.2.5/sc-2.0.2/sp-1.1.1/sl-1.3.1/datatables.min.js"></script>
    <script src="@Url.Content("~/assets/js/pages/datatable/custom-datatable.js")"></script>
    <script>
        $('#zero_config').DataTable(
            {
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: 'Add New Lead',
                        action: function (e, dt, node, config) {
                            window.open("@Url.Action("Editor")");
                        }
                    }
                ],
                "language":
                {
                    "processing": "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
                },
                "processing": true
                /*"columns": [
                    { "data": "LeadId", "name": "LeadId", "autoWidth": true },
                    { "data": "FirstName", "name": "FirstName", "title": "First Name", "autoWidth": true },
                    { "data": "LastName", "name": "LastName", "title": "Last Name", "autoWidth": true },
                    { "data": "Phone", "name": "Phone", "title": "Phone", "autoWidth": true },
                    { "data": "Cellphone", "name": "Cellphone", "title": "Cell", "autoWidth": true },
                    { "data": "Email", "name": "Email", "autoWidth": true },
                    { "data": "LeadStatus", "name": "LeadStatus", "title": "Lead Status", "autoWidth": true },
                    { "data": "LeadOwner", "name": "LeadOwner", "title": "Owner Alias", "autoWidth": true },
                    {
                        "render": function(data, type, full, meta) {
                            return '<a class="btn btn-info" href="/Leads/Editor/' + full.Id + '">Edit</a>';
                        }
                    },
                    {
                        data: null,
                        render: function(data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" +
                                row.Id +
                                "') >Delete</a>";
                        }
                    },
                    {
                        data: null,
                        render: function(data, type, row) {
                            return "<a href='#' class='btn btn-success' onclick=ViewDetails('" +
                                row.Id +
                                "') >Details</a>";
                        }
                    }
                ]*/
            });
        
        function DeleteData(Id) {
            if (confirm("Are you sure you want to delete?")) {
                Delete(Id);
            } else {
                return false;
            }
        }

        function Delete(Id) {
            var url = '@Url.Content("~/")' + "Leads/Delete";
            $.post(url,
                { ID: Id },
                function(data) {
                    if (data == "Deleted") {
                        alert("Deleted Record!");
                        oTable = $('#zero_config').DataTable();
                        oTable.draw();
                    } else {
                        alert("Something Went Wrong!");
                    }
                });
        }

        function ViewDetails(id) {
            window.location = '@Url.Content("~/")' + "Leads/LeadView?leadId=" + id;
        }
    </script>
}
 